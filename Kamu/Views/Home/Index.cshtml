@{
    ViewData["Title"] = "Home Page";
}
@model LoginViewModel

<div class="container">
        <div class="card p-5">
            <div class="row justify-content-center p-5">
                <div class="col-md-6 my-auto">
                    <img src="~/background.jpg" alt="background" class="img-fluid rounded">
                </div>
                <div class="col-md-6 my-auto">
                    <div class=" text-center">
                        <h1 class="display-5 mb-3">Welcome to KAMU!</h1>
                    </div>
                    <form method ="post" asp-controller="Authentication" asp-action="Login">
                        <div class="form-group">
                            <label for="email" class="required">Email</label>
                            <input type="email" class="form-control" required placeholder="Enter email" asp-for ="Email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="required">Password</label>
                            <input type="password" class="form-control" required placeholder="Password" asp-for="Password">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                    </form>
                    <div class="mt-3 text-center">
                        Don't have an account? <a asp-action="SignUp">Create one</a>
                    </div>
                </div>
              
            </div>
        </div>
    </div>

@section Styles
{
    <style type="text/css">
        input{
            margin-bottom:10px
        }
    body
    {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* 100% of the viewport height */
        margin: 0;
        background: linear-gradient(90deg, #f29292, #8b8bf4);
    }

.required::after 
{
    content: "*";
    color: red;
    margin-left: 5px;
}
    </style>
}

@{
    ViewData["Title"] = "Sign up";
}
@model SignUpViewModel

 <div class="container">
        <div class="card p-5">
            <div class="row justify-content-center">
                <div class="col-md-6 my-auto">
                    <img src="~/background.jpg" alt="background" class="img-fluid rounded">
                </div>
                <div class="col-md-6 my-auto">
                    <div class=" text-center">
                        <h1 class="display-5">KAMU</h1>
                        <p class="lead" style="margin-bottom:10px">Classroom Management Platform</p>
                    </div>
                    <form asp-controller="Authentication" asp-action="CreateUser">
                        <div class="form-group">
                            <label for="FirstName" class="required">First Name</label>
                            <input type="text" class="form-control" required placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="LastName" class="required">Last Name</label>
                            <input type="text" class="form-control" required placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="Email" class="required">Email</label>
                            <input type="email" class="form-control" required placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="Username" class="required">Username</label>
                            <input  type="text" class="form-control" required placeholder="Enter username">
                        </div>
                        <div class="form-group">
                            <label for="Password" class="required">Password</label>
                            <input type="password" class="form-control" required placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                    </form>
                    <div class="mt-3 text-center">
                        Already have an account? <a asp-action="Index">Login here</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

@section Styles
{
    <style type="text/css">
    input{
            margin-bottom:10px
      }
    body
    {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* 100% of the viewport height */
        margin: 0;
        background: linear-gradient(90deg, #f29292, #8b8bf4);
    }

.required::after 
{
    content: "*";
    color: red;
    margin-left: 5px;
}
    </style>
}